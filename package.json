{
  "name": "cervyn-visualizer",
  "displayName": "Cervyn Visualizer",
  "description": "AI-powered, multi-layer architecture visualization with real-time task tracking",
  "version": "0.1.1",
  "publisher": "cervyn",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bilgee0517/cervyn-visualizer.git"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Visualization",
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "architecture",
    "visualization",
    "diagram",
    "dependencies",
    "graph",
    "codebase",
    "navigation",
    "ai",
    "mcp"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codebaseVisualizer.showGraph",
        "title": "Cervyn Visualizer: Show Graph",
        "icon": "$(graph)"
      },
      {
        "command": "codebaseVisualizer.refresh",
        "title": "Cervyn Visualizer: Refresh Graph",
        "icon": "$(refresh)"
      },
      {
        "command": "codebaseVisualizer.setLayout",
        "title": "Cervyn Visualizer: Change Layout"
      },
      {
        "command": "codebaseVisualizer.setLayer",
        "title": "Cervyn Visualizer: Switch Layer"
      },
      {
        "command": "codebaseVisualizer.exportGraph",
        "title": "Cervyn Visualizer: Export Graph"
      },
      {
        "command": "codebaseVisualizer.proposeChange",
        "title": "Cervyn Visualizer: Propose Change (AI Agent)"
      },
      {
        "command": "codebaseVisualizer.applyProposedChanges",
        "title": "Cervyn Visualizer: Apply Proposed Changes"
      },
      {
        "command": "codebaseVisualizer.listProposedChanges",
        "title": "Cervyn Visualizer: List Proposed Changes"
      },
      {
        "command": "codebaseVisualizer.clearProposedChanges",
        "title": "Cervyn Visualizer: Clear Proposed Changes"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codebaseVisualizer",
          "title": "Cervyn Visualizer",
          "icon": "$(graph)"
        }
      ]
    },
    "views": {
      "codebaseVisualizer": [
        {
          "id": "codebaseVisualizerView",
          "name": "Architecture Graph",
          "type": "webview"
        }
      ]
    },
    "configuration": {
      "title": "Cervyn Visualizer",
      "properties": {
        "codebaseVisualizer.defaultLayout": {
          "type": "string",
          "default": "dagre",
          "enum": [
            "dagre",
            "concentric",
            "grid",
            "cose",
            "circle"
          ],
          "description": "Default graph layout algorithm"
        },
        "codebaseVisualizer.defaultLayer": {
          "type": "string",
          "default": "implementation",
          "enum": [
            "blueprint",
            "architecture",
            "implementation",
            "dependencies"
          ],
          "description": "Default visualization layer. Note: Currently only 'implementation' layer is fully developed. Other layers have basic implementations and will be enhanced later."
        },
        "codebaseVisualizer.autoRefresh": {
          "type": "boolean",
          "default": true,
          "description": "Automatically refresh graph on file changes"
        },
        "codebaseVisualizer.maxNodes": {
          "type": "number",
          "default": 500,
          "description": "Maximum number of nodes to display"
        },
        "codebaseVisualizer.enableClustering": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic semantic clustering of code modules (LLM-based via MCP server)"
        },
        "codebaseVisualizer.showCodeMetrics": {
          "type": "boolean",
          "default": true,
          "description": "Show code metrics (complexity, LOC, coverage) in visualization"
        },
        "codebaseVisualizer.logLevel": {
          "type": "string",
          "default": "info",
          "enum": [
            "debug",
            "info",
            "warn",
            "error"
          ],
          "description": "Logging level: 'debug' (verbose, for troubleshooting), 'info' (normal operation), 'warn' (warnings only), 'error' (errors only). Lower levels improve performance by reducing log output."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "npm run compile:extension && npm run compile:webview",
    "compile:extension": "tsc -p ./",
    "compile:webview": "node esbuild.config.js",
    "watch": "tsc -watch -p ./",
    "watch:webview": "node esbuild.config.js watch",
    "pretest": "npm run compile",
    "lint": "eslint src --ext ts",
    "package": "vsce package",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.5",
    "@types/jest": "^29.5.14",
    "@types/jsdom": "^21.1.6",
    "@types/node": "^20.10.0",
    "@types/vscode": "1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vscode/test-electron": "^2.3.8",
    "@vscode/vsce": "^2.15.0",
    "esbuild": "^0.27.2",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^23.0.1",
    "ts-jest": "^29.4.6",
    "ts-loader": "^9.5.4",
    "typescript": "^5.3.3",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@typescript-eslint/typescript-estree": "^6.15.0",
    "cytoscape": "^3.28.1",
    "cytoscape-dagre": "^2.5.0",
    "cytoscape-expand-collapse": "^4.1.0",
    "cytoscape-fcose": "^2.2.0",
    "dagre": "^0.8.5",
    "tree-sitter": "^0.21.1",
    "tree-sitter-go": "^0.21.0",
    "tree-sitter-java": "^0.21.0",
    "tree-sitter-python": "^0.21.0",
    "tree-sitter-rust": "^0.21.0",
    "tree-sitter-typescript": "^0.23.2",
    "zod": "^4.3.5"
  }
}
